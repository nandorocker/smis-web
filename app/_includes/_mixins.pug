//- Mixins
mixin workItem(title,max)
	- for (var i = 1; i < max; ++i)
		.gallery-item
			img(src="assets/projects/" + title + "/" + title + "-" + i + ".png")

mixin socialList()
	ul.social
		li: a(href="https://dribbble.com/rajewska", title="Dribbble") #[span.symbol circledribble]
		li: a(href="http://behance.com/rajewska", title="Behance") #[span.symbol circlebehance]
		li: a(href="http://pinterest.com/zrajewska", title="Pinterest") #[span.symbol circlepinterest]
		li: a(href="http://instagram.com/hollykitty666", title="Instagram") #[span.symbol circleinstagram]
		li: a(href="https://www.linkedin.com/in/zuzannarajewska", title="Linkedin") #[span.symbol circlelinkedin]